{
  "name": "agent-context-display",
  "displayName": "Agent Context Display",
  "description": "Real-time visualization of agentic context/token usage from JSON logs â€” main agent and subagents",
  "version": "0.1.0",
  "publisher": "agent-context",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivarhuni/-vs-context"
  },
  "homepage": "https://github.com/ivarhuni/-vs-context#readme",
  "bugs": {
    "url": "https://github.com/ivarhuni/-vs-context/issues"
  },
  "keywords": [
    "agent",
    "context",
    "token",
    "llm",
    "ai",
    "monitoring",
    "visualization",
    "subagent"
  ],
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentContext.showTree",
        "title": "Agent Context: Show Tree"
      },
      {
        "command": "agentContext.openWebview",
        "title": "Agent Context: Open Detail Panel"
      },
      {
        "command": "agentContext.refresh",
        "title": "Agent Context: Refresh Now"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agentContext",
          "title": "Agent Context",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "agentContext": [
        {
          "id": "agentContextTree",
          "name": "Context Usage"
        }
      ]
    },
    "configuration": {
      "title": "Agent Context",
      "properties": {
        "agentContext.logFilePath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to JSONL log file (only used when dataSource is 'jsonl')"
        },
        "agentContext.dataSource": {
          "type": "string",
          "enum": [
            "copilot-chat",
            "jsonl"
          ],
          "enumDescriptions": [
            "Automatically read live token usage from VS Code Copilot Chat session files (no configuration needed)",
            "Read from a custom JSONL log file (set agentContext.logFilePath)"
          ],
          "default": "copilot-chat",
          "description": "Data source for agent context usage"
        },
        "agentContext.pollIntervalMs": {
          "type": "number",
          "default": 2000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Polling interval in milliseconds (1000-30000)"
        },
        "agentContext.activityWindowMinutes": {
          "type": "number",
          "default": 60,
          "minimum": 5,
          "maximum": 1440,
          "description": "Sessions inactive for longer than this many minutes are hidden from the view"
        },
        "agentContext.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Logging level for the extension"
        },
        "agentContext.warningThresholdPercent": {
          "type": "number",
          "default": 70,
          "minimum": 1,
          "maximum": 99,
          "description": "Context usage percentage to trigger warning state"
        },
        "agentContext.criticalThresholdPercent": {
          "type": "number",
          "default": 85,
          "minimum": 1,
          "maximum": 100,
          "description": "Context usage percentage to trigger critical state"
        },
        "agentContext.notifyOnCritical": {
          "type": "boolean",
          "default": true,
          "description": "Show notification when an agent crosses critical threshold"
        },
        "agentContext.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show status bar context summary"
        },
        "agentContext.statusBarMode": {
          "type": "string",
          "enum": [
            "hottestAgent",
            "sessionSummary"
          ],
          "default": "hottestAgent",
          "description": "Status bar display mode"
        },
        "agentContext.webview.retainContext": {
          "type": "boolean",
          "default": false,
          "description": "Keep webview state when hidden (uses more memory)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTests.js",
    "test:unit": "mocha --require ts-node/register 'src/test/unit/**/*.test.ts' --timeout 10000",
    "build": "npm run compile",
    "package": "npx @vscode/vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.3.0",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^10.0.1",
    "mocha": "^11.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}